<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<div class="container">
  <div class="form-box">
    <h1>Create a new task</h1>
    </div>
    <%= simple_form_for(@task, as: :task, method: :post, url: flat_tasks_path) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.association :category %>
      <%= f.submit "Create this task", class: "button-dark" %>
    <% end %>
  </div>
</div>
