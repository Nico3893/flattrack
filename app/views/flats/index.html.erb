<% content_for(:title) do %>
  Flattrack Flats
<% end %>


<div class="container">
<h2 class="header">Your flats</h2>
  <div class="container-flat-index">
    <div class="item-map">
      <div
  id="map" style="width: 100%; height: 100%; min-height:500px; max-height:630px" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      </div>
      <div class="item-list">
      <% @flats_geocoded.each do |flat| %>
      <%= link_to flat_path(flat) do%>
        <div class="flatitem">
        <h3 class="address-header"><%=flat.address%></h3>
        <div class="row"> 
        <p>
          <%if flat.rooms == 1%> 
            <img src="https://img.icons8.com/material/24/000000/room.png"> 
          <%else%>
            <img src="https://img.icons8.com/material/24/000000/room.png"> 
          <%end%>
            <br>
              <%= flat.rooms%> 
            </p> 
            <p>
              <i class="fas fa-ruler-combined"></i> 
                <br> 
                <%=flat.area%>mÂ² 
            </p>
            <p> 
              <i class="fas fa-euro-sign"></i>
              <br>
              <%=flat.monthly_rent%>
              </p> 
              
          <%if flat.parking_space == 0 %>
          <%else%>
          <p> 
            <i class="fas fa-parking">
            </i>
            <br>
            <%=flat.parking_space%>
          </p>
          <%end%> 
          <%if flat.address_specification.nil?%>
          <%else%> 
            <p>
            <img src="icon_flat.png" alt="" style="width:20px;length:20px">
            <br> 
          <%= flat.address_specification%>
            </p>
          <%end%>
        </div>
      </div>
    <%end%>
    <%end%>
    </div>
  </div>


    </div>
  </div>
</div>


