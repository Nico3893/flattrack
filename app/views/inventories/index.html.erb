<% content_for(:title) do %>
  Flattrack | Inventory for <%= @flat.address %>
<% end %>

<div class="container">
  <div class="my-3">
    <%= link_to flat_path(@flat), class: "button-dark" do %>
      <i class="fas fa-arrow-left"></i> &nbsp; Back
    <% end %>
  </div>
  <h2 class="header pt-0">Inventory</h2>
  <h3>Bedroom (<%= @bedroom.count %>)</h3>
  <div class="row">
    <% @bedroom.each do |inventory| %>
      <div class="col-lg-6 col-sm-12">
        <div class="card-inventory" style="background-image: linear-gradient(to right, rgba(0,0,0,0.8) 0%,rgba(0,0,0,0.2) 50%,rgba(0,0,0,0.8) 100%), url('<%= cl_image_path inventory.photo, height: 150, width: 400, crop: :fill %>')">
          <div class="d-flex flex-grow-1 justify-content-between">
            <span class="flex-grow-1">
              <h3 class=""><%= inventory.description.upcase %></h3>
            </span>
            <span>
              <h3 class="price"><%= inventory.historic_value %>€</h3>
            </span>
          </div>
          <div class="d-flex justify-content-between">
            <!-- <div class="d-flex flex-column"> -->
              <span class="mr-2">
                <p><%= inventory.name.capitalize %></p>
              </span>
            <!-- </div> -->
            <%= link_to "Replace", flat_inventory_path(@flat, inventory), method: :delete, class: "button-light", id:'inventory-alert' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
