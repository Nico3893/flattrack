<div class="container">
  <h2 class="header">Inventories for <%= @flat.address %></h2>
  <div class="row">
    <% @inventories.each do |inventory| %>
      <div class="col-lg-6 col-sm-12">
        <div class="card-inventory" style="background-image: linear-gradient(to right, rgba(0,0,0,0.9) 0%,rgba(255,255,255,0) 50%,rgba(0,0,0,0.9) 100%), url(https://picsum.photos/id/167/400/150)">
          <div class="d-flex flex-grow-1 justify-content-between">
            <span class="flex-grow-1">
              <h3 class=""><%= inventory.description.upcase %></h3>
            </span>
            <span>
              <h3 class="price"><%= inventory.historic_value %>â‚¬</h3>
            </span>
          </div>
          <div class="d-flex justify-content-between">
            <!-- <div class="d-flex flex-column"> -->
              <span class="mr-2">
                <p><%= inventory.name.capitalize %></p>
              </span>
            <!-- </div> -->
            <%= link_to "Replace", flat_inventory_path(@flat, inventory), method: :delete, class: "button-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
